{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es6"],
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@pages/*": ["src/pages/*"]
    },
    "types": ["@types/styled-components-react-native", "reflect-metadata"],
    "typeRoots": ["./src/@types", "node_modules/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"]
}
